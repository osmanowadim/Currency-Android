<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/item_currency_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_currency_container_height">

    <TextView
            android:id="@+id/item_currency_code_tv"
            android:layout_marginStart="@dimen/item_currency_code_tv_marginStart"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/item_currency_code_tv_width"
            android:textSize="@dimen/tv_textSize"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            tools:text="UAH"/>

    <TextView
            android:id="@+id/item_currency_name_tv"
            android:layout_toEndOf="@+id/item_currency_code_tv"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/item_currency_name_tv_marginStart"
            android:textSize="@dimen/tv_textSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Гривна"/>

</RelativeLayout>
